<h1>Posts#index</h1>
<section id="new_post">
  <div>
    <%= form_with model: @new_post do |form| %>
      <div class="field">
        <%= form.text_field :body, placeholder: "Write a new post..." %>
      </div>
      <%= form.submit "Create Post" %>
    <% end %>
  </div>
</section>

<section id="posts">
  <%= render "shared/posts", posts: @posts, new_comment: @new_comment %>
</section>

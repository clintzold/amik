<div style="width: 800px;">
  <% posts.each do |post| %>
    <div class="card">
      <%= render "profiles/profile_nav", user: post.user %>
      <div class="image-collection">
        <% if post.images.attached? %>
          <% post.images.each do |image| %>
            <div class="img-card">
              <%= image_tag image.variant(resize_to_limit: [200,200]), class: "profile-image" %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div>
        <p>
          <%= post.body %>
        </p>
      </div>
      <div style="display:flex; align-items: center; gap: 10px;">
        <%= button_to "like", likes_path, params: {likeable_type: "Post", likeable_id: post.id}, class: "btn" %>
        <p><small>Likes: <%= post.likes_counter %></small></p>
        <p><small>Comments: <%= post.comments.length %></small></p>
      </div>
      <div>
        <%= form_with model: new_comment do |form| %>
          <%= form.hidden_field :commentable_id, value: post.id %>
          <%= form.hidden_field :commentable_type, value: "Post" %>
          <div class="field">
            <%= form.text_field :body, placeholder: "Leave a comment..." %>
            <%= form.submit "Submit comment" %>
          </div>
        <% end %>
      </div>
      <% if post.comments.any? %>
        <div class="card" style="margin: 10px;">
          <% post.comments.each do |comment| %>

            <div class="comment">
              <div class="comment-details">
                <%= render "profiles/profile_nav", user: comment.user %>
                <p><%= comment.body %></p>
              </div>
              <div class="likes-box">
                <p><small>Likes: <%= comment.likes.length %></small></p>
                <%= button_to "like", likes_path, params: {likeable_type: "Comment", likeable_id: comment.id}, class: "btn" %>
              </div>
            </div>

          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
